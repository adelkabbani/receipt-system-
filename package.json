{
  "name": "receipt-app",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build && node copy-assets.js",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "backup-db": "node -e \"const fs=require('fs');const src='prisma/dev.db';if(fs.existsSync(src)){const ts=new Date().toISOString().replace(/[:.]/g,'-');fs.copyFileSync(src,'prisma/dev.backup-'+ts+'.db');console.log('Backup created: dev.backup-'+ts+'.db');}else{console.log('No database to back up.');}\"",
    "seed": "node prisma/seed.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "build": {
    "appId": "com.antigravity.receipt",
    "productName": "Receipt System",
    "asar": true,
    "asarUnpack": [
      "node_modules/.prisma",
      "node_modules/@prisma/client"
    ],
    "files": [
      "**/*",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/*.map"
    ],
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "prisma/",
        "to": "prisma/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".next/standalone/",
        "to": "standalone/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".next/standalone/node_modules/",
        "to": "standalone/node_modules/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    }
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@react-pdf/renderer": "^3.4.4",
    "autoprefixer": "^10.4.24",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.378.0",
    "next": "14.2.3",
    "react": "^18",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "postcss": "^8",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^9.0.4"
  }
}